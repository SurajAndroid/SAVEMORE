<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="2sp"
    android:layout_height="match_parent">


    <View
        android:visibility="gone"
        android:layout_marginTop="5sp"
        android:layout_below="@+id/layoutnumber"
        android:layout_width="match_parent"
        android:background="@drawable/dotted"
        android:layout_height="3sp">

    </View>

    <LinearLayout
        android:id="@+id/layoutnumber"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:background="@drawable/missed_circle"
                android:layout_width="60sp"
                android:layout_height="60sp">

                <TextView
                    android:id="@+id/numberCountTxt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="10sp"
            android:layout_weight="3.7"
            android:layout_width="0sp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/numberTxt"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:text="5465654646"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/callTxt"
                    android:background="@color/button"
                    android:padding="5sp"
                    android:gravity="center"
                    android:layout_marginRight="10sp"
                    android:layout_weight="3"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="CALL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/countTxt"
                    android:textSize="14sp"
                    android:layout_marginLeft="5sp"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(05)"/>

                <TextView
                    android:textSize="14sp"
                    android:layout_marginLeft="5sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Missed call"/>

                <TextView

                    android:id="@+id/weekCountTxt"
                    android:textSize="14sp"
                    android:layout_marginLeft="5sp"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(250)"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>