<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="2sp"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/yellow"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Nick Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nickNameTxt" />

        <TextView
            android:layout_marginTop="5sp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="+91-000-000-0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/numberTXt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutnumber"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:background="@drawable/circle_layout"
                android:layout_width="120sp"
                android:layout_height="120sp">

                <TextView
                    android:id="@+id/monthCountTxt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:text="20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:text="Month"
                android:layout_marginTop="10sp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:background="@drawable/circle_layout"
                android:layout_width="120sp"
                android:layout_height="120sp">

                <TextView
                    android:id="@+id/totalCountTxt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:text="50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <TextView
                android:text="Total"
                android:layout_marginTop="10sp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_below="@+id/layoutnumber"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@color/com_facebook_likeview_text_color"/>
</RelativeLayout>